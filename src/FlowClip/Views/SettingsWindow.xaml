<Window x:Class="FlowClip.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FlowClip Settings"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Width="400"
        Height="380">

    <Border Background="{StaticResource AcrylicBackgroundBrush}"
            CornerRadius="12"
            BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="30" ShadowDepth="5" Opacity="0.5"/>
        </Border.Effect>

        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="Settings"
                           FontSize="20"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource PrimaryForegroundBrush}"/>

                <Button Style="{StaticResource IconButtonStyle}"
                        HorizontalAlignment="Right"
                        Click="CloseButton_Click">
                    <TextBlock Text="âœ•" FontSize="14"/>
                </Button>
            </Grid>

            <!-- Settings Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- History Limit -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="History Limit"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource PrimaryForegroundBrush}"
                                   Margin="0,0,0,8"/>
                        <TextBlock Text="Maximum number of clipboard entries to keep"
                                   FontSize="11"
                                   Foreground="{StaticResource SecondaryForegroundBrush}"
                                   Margin="0,0,0,8"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Slider x:Name="HistoryLimitSlider"
                                    Minimum="10" Maximum="100"
                                    Value="{Binding HistoryLimit}"
                                    TickFrequency="10"
                                    IsSnapToTickEnabled="True"
                                    VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1"
                                       Text="{Binding HistoryLimit}"
                                       FontSize="13"
                                       Foreground="{StaticResource PrimaryForegroundBrush}"
                                       Width="30"
                                       TextAlignment="Right"
                                       VerticalAlignment="Center"
                                       Margin="12,0,0,0"/>
                        </Grid>
                    </StackPanel>

                    <!-- Hotkey -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Global Hotkey"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource PrimaryForegroundBrush}"
                                   Margin="0,0,0,8"/>
                        <TextBlock Text="Keyboard shortcut to show/hide FlowClip"
                                   FontSize="11"
                                   Foreground="{StaticResource SecondaryForegroundBrush}"
                                   Margin="0,0,0,8"/>

                        <StackPanel Orientation="Horizontal">
                            <CheckBox Content="Ctrl"
                                      IsChecked="{Binding UseCtrl}"
                                      Style="{StaticResource ModernCheckBoxStyle}"
                                      Margin="0,0,16,0"/>
                            <CheckBox Content="Alt"
                                      IsChecked="{Binding UseAlt}"
                                      Style="{StaticResource ModernCheckBoxStyle}"
                                      Margin="0,0,16,0"/>
                            <CheckBox Content="Shift"
                                      IsChecked="{Binding UseShift}"
                                      Style="{StaticResource ModernCheckBoxStyle}"
                                      Margin="0,0,16,0"/>
                        </StackPanel>

                        <Grid Margin="0,12,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Key:"
                                       FontSize="12"
                                       Foreground="{StaticResource SecondaryForegroundBrush}"
                                       VerticalAlignment="Center"
                                       Margin="0,0,12,0"/>
                            <TextBox Text="{Binding HotkeyKey, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource ModernTextBoxStyle}"
                                     Width="60"
                                     MaxLength="1"
                                     HorizontalAlignment="Left"
                                     CharacterCasing="Upper"/>
                        </Grid>

                        <Border Background="{StaticResource TertiaryBackgroundBrush}"
                                CornerRadius="6"
                                Padding="12,8"
                                Margin="0,12,0,0">
                            <TextBlock FontSize="12"
                                       Foreground="{StaticResource SecondaryForegroundBrush}">
                                <Run Text="Current:"/>
                                <Run Text="{Binding HotkeyDisplay, Mode=OneWay}" FontWeight="SemiBold" Foreground="{StaticResource PrimaryForegroundBrush}"/>
                            </TextBlock>
                        </Border>
                    </StackPanel>

                    <!-- Startup -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Startup"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource PrimaryForegroundBrush}"
                                   Margin="0,0,0,8"/>
                        <CheckBox Content="Run FlowClip when Windows starts"
                                  IsChecked="{Binding RunOnStartup}"
                                  Style="{StaticResource ModernCheckBoxStyle}"/>
                    </StackPanel>

                    <!-- Status Message -->
                    <TextBlock Text="{Binding StatusMessage}"
                               FontSize="12"
                               Foreground="{StaticResource SuccessBrush}"
                               Visibility="{Binding StatusMessage, Converter={StaticResource BoolToVisibilityConverter}}"
                               Margin="0,0,0,12"/>
                </StackPanel>
            </ScrollViewer>

            <!-- Footer -->
            <Grid Grid.Row="2" Margin="0,20,0,0">
                <Button Content="Cancel"
                        Style="{StaticResource ModernButtonStyle}"
                        HorizontalAlignment="Left"
                        Click="CancelButton_Click"/>

                <Button Content="Save"
                        Style="{StaticResource AccentButtonStyle}"
                        HorizontalAlignment="Right"
                        Command="{Binding SaveCommand}"/>
            </Grid>
        </Grid>
    </Border>
</Window>
